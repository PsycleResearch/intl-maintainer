{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "lib": ["es2021"],
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "bin",
        "baseUrl": ".",
        "allowJs": true,
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strict": true,
        "downlevelIteration": true,
        "esModuleInterop": true
    },
    "include": ["src/**/*"]
}
